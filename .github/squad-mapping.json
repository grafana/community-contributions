{
  "comment": "Squad mapping configuration for PR routing and Slack notifications",
  "notification_strategy": {
    "description": "Minimal, actionable notifications - only on success states",
    "rules": [
      "Notify when validation passes (ready for human review)",
      "Do NOT notify on PR open (wait for validation)",
      "Do NOT notify on failures (let contributor iterate)",
      "Do NOT re-notify on every commit (avoid spam)"
    ],
    "triggers": {
      "small_pr": "All automated checks pass -> validation-passed",
      "medium_pr": "All automated checks pass -> validation-passed",
      "large_pr_phase1": "Needs early alignment (no alignment-approved label) -> early-alignment",
      "large_pr_phase2": "Post-alignment, all checks pass -> ready-for-review"
    }
  },
  "squads": [
    {
      "name": "frontend",
      "slack_channel": "#squad-frontend",
      "slack_webhook_secret": "SLACK_WEBHOOK_FRONTEND",
      "file_patterns": [
        "public/**/*.ts",
        "public/**/*.tsx",
        "public/**/*.js",
        "public/**/*.jsx",
        "packages/**/*.ts",
        "packages/**/*.tsx"
      ],
      "labels": ["area/frontend"]
    },
    {
      "name": "backend",
      "slack_channel": "#squad-backend",
      "slack_webhook_secret": "SLACK_WEBHOOK_BACKEND",
      "file_patterns": [
        "pkg/**/*.go",
        "apps/**/*.go"
      ],
      "labels": ["area/backend"]
    },
    {
      "name": "alerting",
      "slack_channel": "#squad-alerting",
      "slack_webhook_secret": "SLACK_WEBHOOK_ALERTING",
      "file_patterns": [
        "pkg/services/ngalert/**/*",
        "pkg/services/alerting/**/*",
        "public/app/features/alerting/**/*"
      ],
      "labels": ["area/alerting"]
    },
    {
      "name": "explore",
      "slack_channel": "#squad-explore",
      "slack_webhook_secret": "SLACK_WEBHOOK_EXPLORE",
      "file_patterns": [
        "public/app/features/explore/**/*"
      ],
      "labels": ["area/explore"]
    },
    {
      "name": "dashboards",
      "slack_channel": "#squad-dashboards",
      "slack_webhook_secret": "SLACK_WEBHOOK_DASHBOARDS",
      "file_patterns": [
        "public/app/features/dashboard/**/*",
        "apps/dashboard/**/*"
      ],
      "labels": ["area/dashboard"]
    },
    {
      "name": "datasources",
      "slack_channel": "#squad-datasources",
      "slack_webhook_secret": "SLACK_WEBHOOK_DATASOURCES",
      "file_patterns": [
        "public/app/plugins/datasource/**/*",
        "pkg/tsdb/**/*"
      ],
      "labels": ["area/datasources", "datasource/*"]
    },
    {
      "name": "docs",
      "slack_channel": "#squad-docs",
      "slack_webhook_secret": "SLACK_WEBHOOK_DOCS",
      "file_patterns": [
        "docs/**/*",
        "contribute/**/*",
        "**/*.md"
      ],
      "labels": ["type/docs"]
    }
  ],
  "default_squad": {
    "name": "triage",
    "slack_channel": "#external-pr-triage",
    "slack_webhook_secret": "SLACK_WEBHOOK_DEFAULT"
  }
}


